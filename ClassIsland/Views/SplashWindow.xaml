<Window x:Class="ClassIsland.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassIsland.Views"
        xmlns:views="clr-namespace:ClassIsland.Views"
        xmlns:controls="clr-namespace:ClassIsland.Controls"
        xmlns:windows="clr-namespace:Walterlv.Windows;assembly=ClassIsland.Core"
        mc:Ignorable="d"
        Title="ClassIsland 正在启动……" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="{x:Null}"
        FontFamily="{StaticResource HarmonyOsSans}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"   
        ShowActivated="False"
        Closed="SplashWindow_OnClosed"
        Height="100" Width="400">
    <windows:AsyncBox LoadingViewType="controls:SplashControl"
                      LoadingViewLoaded="AsyncBox_OnLoadingViewLoaded"
                      x:Name="AsyncBox"/>
</Window>
