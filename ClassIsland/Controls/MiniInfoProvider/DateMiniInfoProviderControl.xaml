<UserControl x:Class="ClassIsland.Controls.MiniInfoProvider.DateMiniInfoProviderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassIsland.Controls.MiniInfoProvider"
             xmlns:classIsland="clr-namespace:ClassIsland"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance classIsland:MainWindow}">
    <Grid>
        <TextBlock FontSize="16"
                   Text="{Binding LessonsService.Today, ConverterCulture=zh-cn, StringFormat=\{0:ddd MM/dd\}}" />
    </Grid>
</UserControl>
